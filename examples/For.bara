// RUN: bara %s -ast-print | FileCheck %s

//===----------------------------------------------------------------------===//
/// Sum 
//===----------------------------------------------------------------------===//

var sum = 0;

for (var i = 0; i < 20; i += 1) {
  sum += i;
}

print(sum);

// CHECK: var sum = 0;

// CHECK-LABEL: for (var i = 0; i < 20; i += 1)
// CHECK-NEXT:   sum += i;

// CHECK: print(sum);

//===----------------------------------------------------------------------===//
/// Empty For
//===----------------------------------------------------------------------===//


for (;;) {}

// CHECK-LABEL: for (; ; ) 

//===----------------------------------------------------------------------===//
/// No Cond
//===----------------------------------------------------------------------===//

for (var i = 0;; i += 1) {
  if i < 20 {
    break;
  } else {
    continue;
  }
}

// CHECK-LABEL: for (var i = 0; ; i += 1) 
// CHECK-NEXT:  if i < 20
// CHECK-NEXT:    break;
// CHECK-NEXT:  else 
// CHECK-NEXT:    continue;


//===----------------------------------------------------------------------===//
/// Compound Step
//===----------------------------------------------------------------------===//

for (var i = 0;; {
  i += 1;
  i += 2;
}) {}

/// CHECK-LABEL: for (var i = 0; ; {
/// CHECK-NEXT:  i += 1;
/// CHECK-NEXT:  i += 2;
/// CHECK-NEXT: }) {
/// CHECK-NEXT: }


